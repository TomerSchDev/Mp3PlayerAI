<?xml version="1.0" encoding="utf-8"?>
<!--
    IMPROVED Bottom Sheet Player Layout
    - No album art (more space for content)
    - Better spacing
    - Working queue RecyclerView
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottomSheetPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:orientation="vertical"
        android:padding="16dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Top Bar with Drag Handle and Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Drag Handle (centered) -->
            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="48dp"
                android:layout_weight="1"
                android:background="#CCCCCC" />

            <!-- Minimize Button -->
            <ImageButton
                android:id="@+id/playerBtnMinimize"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Minimize"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Song Info (Now at top, no album art!) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/playerSongTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Song Title"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/playerArtistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Artist Name"
                android:textColor="#EEEEEE"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/playerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:progressTint="#6200EE"
            android:thumbTint="#6200EE"
            android:layout_marginBottom="4dp" />

        <!-- Total Duration -->
        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="0:00"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />



        <!-- Playback Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <!-- ðŸ¤– Playback Mode Button -->
            <ImageButton
                android:id="@+id/player_btn_playback_mode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_repeat_off"
                android:contentDescription="Playback Mode"
                android:alpha="0.5"
                app:tint="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/playerBtnPrevious"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:contentDescription="Previous"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/playerBtnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginHorizontal="16dp"
                android:background="@null"
                android:contentDescription="Play/Pause"
                android:src="@android:drawable/ic_media_play"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/playerBtnNext"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:contentDescription="Next"
                android:src="@android:drawable/ic_media_next"
                app:tint="#FFFFFF" />

            <!-- Spacer for symmetry -->
            <Space
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- ðŸ¤– AI Continue Status Bar -->
        <LinearLayout
            android:id="@+id/layout_ai_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_ai_status"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_ai_sparkle"
                app:tint="#00E5FF"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/tv_ai_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ¤– AI Continue: 12 songs in queue"
                android:textSize="12sp"
                android:textColor="#00E5FF"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_ai_settings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="AI Settings"
                app:tint="#00E5FF"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Up Next Section - Takes Remaining Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="#AA000000"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Up Next Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Up Next"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Queue RecyclerView - FIXED! -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playerQueue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
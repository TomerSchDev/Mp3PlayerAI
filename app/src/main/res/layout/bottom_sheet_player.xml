<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottomSheetPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:orientation="vertical"
        android:padding="16dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Top Bar with Drag Handle and Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Drag Handle (centered) -->
            <View
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="48dp"
                android:layout_weight="1"
                android:background="#CCCCCC" />

            <!-- Minimize Button -->
            <ImageButton
                android:id="@+id/playerBtnMinimize"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Minimize"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Album Art -->
        <ImageView
            android:id="@+id/playerAlbumArt"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_media_play" />

        <!-- Song Info -->
        <TextView
            android:id="@+id/playerSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="8dp"
            android:text="Song Title"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playerArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Artist Name"
            android:textColor="#EEEEEE"
            android:textSize="14sp" />

        <!-- Seek Bar -->
        <SeekBar
            android:id="@+id/playerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp" />

        <!-- Playback Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playerBtnPrevious"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:contentDescription="Previous"
                android:src="@android:drawable/ic_media_previous"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/playerBtnPlayPause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="24dp"
                android:background="@null"
                android:contentDescription="Play/Pause"
                android:src="@android:drawable/ic_media_play"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/playerBtnNext"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:contentDescription="Next"
                android:src="@android:drawable/ic_media_next"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Up Next Section with Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="#AA000000"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp">

            <!-- Up Next Queue Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Up Next"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Queue RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playerQueue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
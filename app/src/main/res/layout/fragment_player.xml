<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Simple Player Fragment Layout
    
    Note: The main player UI is in MainActivity's bottom sheet.
    This is a minimal fragment that can be extended if needed.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_controls_are_in_the_bottom_sheet"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center" />
    
    <!-- These IDs exist to prevent compilation errors -->
    <!-- They can be removed if not needed -->
    
    <View android:id="@+id/tv_song_title" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/tv_song_artist" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/tv_current_time" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/tv_total_time" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/seekbar_progress" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/btn_play_pause" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/btn_next" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/btn_previous" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/btn_playback_mode" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/btn_shuffle" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <View android:id="@+id/tv_queue_info" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

</LinearLayout>

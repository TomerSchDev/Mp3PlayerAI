<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvCurrentScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Score: 0.50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter new score (-1.0 to 1.0):"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0.00"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/edittext_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Positive scores (0 to 1) = liked songs\nNegative scores (-1 to 0) = disliked songs"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp" />

</LinearLayout>